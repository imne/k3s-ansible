apiVersion: v1
kind: Namespace
metadata:
  name: keycloak
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak
  namespace: keycloak
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak
  template:
    metadata:
      labels:
        app: keycloak
    spec:
      containers:
      - name: keycloak
        image: quay.io/keycloak/keycloak:25.0.1
        args: ["{{ keyclaok_args }}"]
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        readinessProbe:
          httpGet:
            path: /realms/master
            port: 8080 
        env:
        - name: DB_VENDOR
          value: postgres
        - name: DB_ADDR
          value: postgresql.postgresql.svc.cluster.local
        - name: DB_DATABASE
          value: keycloak
        - name: DB_USER
          value: {{ keycloak_db_user }}
        - name: DB_PASSWORD
          value: {{ keycloak_db_password }}
        - name: KEYCLOAK_USER
          value: {{ keycloak_user }}
        - name: KEYCLOAK_PASSWORD
          value: {{ keycloak_password }}
        - name: KC_FEATURES
          value: {{ keyclaok_features }}
---
apiVersion: v1
kind: Service
metadata:
  name: keycloak-service
  namespace: keycloak
  labels:
    app: keycloak
spec:
  ports:
    - name: http
      port: 8080
      targetPort: 8080
      protocol: TCP
  selector:
    app: keycloak
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: keycloak-ingress
  namespace: keycloak
  annotations:
    cert-manager.io/cluster-issuer: ca-kwamlng-prod
    external-dns.alpha.kubernetes.io/hostname: keycloak.kwamlng.dev
spec:
  rules:
  - host: keycloak.kwamlng.dev
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: keycloak-service
            port:
              number: 8080
  tls:
  - hosts:
    - keycloak.kwamlng.dev
    secretName: keycloak-tls