---
apiVersion: v1
kind: Namespace
metadata:
  name: keycloak
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: keycloak-tls
  namespace: keycloak
spec:
  secretName: "keycloak-tls"
  duration: 2060h0m0s # 90d
  renewBefore: 48h0m0s # 2d
  subject:
    organizations:
      - KwaMalinga Home Lab
  commonName: keycloak.{{ cluster_domain }}
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  usages:
    - server auth
    - client auth
  dnsNames:
    - keycloak.{{ cluster_domain }}
  issuerRef:
    name: ca-kwamlng-selfsigned
    kind: ClusterIssuer
    group: cert-manager.io
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-credentials-secret
  namespace: keycloak
type: Opaque
data:
  KC_DB_USERNAME: {{ keycloak_db_user }}
  KC_DB_PASSWORD: {{ keycloak_db_password }}
  KEYCLOAK_ADMIN: {{ keycloak_user }}
  KEYCLOAK_ADMIN_PASSWORD: {{ keycloak_password }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak
  namespace: keycloak
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak
  template:
    metadata:
      labels:
        app: keycloak
    spec:
      volumes:
        - name: tls
          secret:
            secretName: keycloak-tls
        - name: credentials-volume
          secret:
            secretName: keycloak-credentials-secret
        - name: providers
          emptyDir:
            sizeLimit: 500Mi
      containers:
      - name: keycloak
        image: quay.io/keycloak/keycloak:21.1.2
        tty: true
        stdin: true
        args: ["{{ keyclaok_args }}"]
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        - containerPort: 443
        readinessProbe:
          httpGet:
            path: /realms/master
            port: 8080 
        env:
        - name: KC_LOG_LEVEL
          value: 'INFO'
        - name: KC_DB
          value: 'postgres'
        - name: KC_DB_URL
          value: jdbc:postgresql://postgresql.postgresql.svc.cluster.local:5432/dev
        - name: KC_DB_USERNAME
          valueFrom:
            secretKeyRef:
              name: keycloak-credentials-secret
              key: KC_DB_USERNAME
        - name: KC_DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: keycloak-credentials-secret
              key: KC_DB_PASSWORD
        - name: KC_DB_SCHEMA
          value: KEYCLOAK
        - name: KEYCLOAK_ADMIN
          valueFrom:
            secretKeyRef:
              name: keycloak-credentials-secret
              key: KEYCLOAK_ADMIN
        - name: KEYCLOAK_ADMIN_PASSWORD
          valueFrom:
            secretKeyRef:
              name: keycloak-credentials-secret
              key: KEYCLOAK_ADMIN_PASSWORD
        - name: KC_HOSTNAME_STRICT
          value: 'false'
        - name: KC_HOSTNAME_STRICT_HTTPS
          value: 'false'
        - name: PROXY_ADDRESS_FORWARDING
          value: 'true'
        - name: KC_PROXY
          value: 'edge'
        - name: KC_HTTPS_PORT
          value: "443"
        - name: KC_HTTPS_CERTIFICATE_FILE
          value: /etc/nginx/ssl/tls.crt
        - name: KC_HTTPS_CERTIFICATE_KEY_FILE
          value: /etc/nginx/ssl/tls.key
        - name: KC_HTTP_PORT
          value: "8080"
        - name: KC_HEALTH_ENABLED
          value: 'true'
        - name: KC_METRICS_ENABLED
          value: 'true'
        - name: KEYCLOAK_SERVER_TIME_SKEW
          value: "60"
        - name: KEYCLOAK_ACCESS_TOKEN_LIFESPAN
          value: "3600"
        - name: KEYCLOAK_ACCESS_CODE_LIFESPAN
          value: "600"
        - name: KEYCLOAK_REMEMBER_ME
          value: "true"
        - name: KEYCLOAK_REMEMBER_ME_LIFESPAN
          value: "2592000"
        - name: TZ
          value: 'Africa/Johannesburg'
        - name: KC_FEATURES
          value: {{ keyclaok_features }}
      initContainers:
        - name: download-sms-provider-libraries
          image: alpine
          command: ["/bin/sh","-c"]
          args:
            - |
              cd /opt/keycloak/providers/ &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-phone-provider.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-phone-provider.resources.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-aliyun.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-aws-sns.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-cloopen.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-dummy.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-tencent.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-totalvoice.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-twilio.jar &&
              wget https://github.com/cooperlyt/keycloak-phone-provider/releases/download/21.0.2_phone-2.3.3/keycloak-sms-provider-yunxin.jar &&
              ls -lrth
          volumeMounts:
            - mountPath: /opt/keycloak/providers/
              name: providers
            - name: tls
              mountPath: /etc/nginx/ssl/
---
apiVersion: v1
kind: Service
metadata:
  name: keycloak-service
  namespace: keycloak
  labels:
    app: keycloak
spec:
  ports:
    - name: http
      port: 8080
      targetPort: 8080
      protocol: TCP
    - name: https
      port: 443
      targetPort: 443
      protocol: TCP
  selector:
    app: keycloak
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: keycloak-ingress
  namespace: keycloak
  annotations:
    cert-manager.io/cluster-issuer: ca-kwamlng-prod
    external-dns.alpha.kubernetes.io/hostname: keycloak.{{ cluster_domain }}
spec:
  rules:
  - host: keycloak.{{ cluster_domain }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: keycloak-service
            port:
              number: 443
  tls:
  - hosts:
    - keycloak.{{ cluster_domain }}
    secretName: keycloak-kwamlng-dev-tls