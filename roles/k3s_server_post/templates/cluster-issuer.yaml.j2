---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ca-kwamlng-prod
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ cert_manager_notify_email }}
    privateKeySecretRef:
      name: ca-kwamlng-prod
    solvers:
    - dns01:
        cloudflare:
          email: {{ cert_manager_notify_email }}
          apiTokenSecretRef:
            name: cloudflare-api-token-secret
            key: api-token
